@page
@model ApplicationSecurity.Pages.ForgotPasswordModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Forgot Password";
}

<div class="auth-form-box">
    @if (Model.EmailSent)
    {
        <div class="text-center">
            <div class="mb-3"><i data-lucide="mail-check" style="width:40px;height:40px;color:var(--success);"></i></div>
            <h1 class="page-title mb-1">Check your email</h1>
            <p class="page-desc mb-4">If an account exists, we&rsquo;ve sent a reset link.</p>
            <a asp-page="/Login" class="btn btn-p btn-sm">Back to login</a>
        </div>
    }
    else
    {
        <h1 class="page-title mb-1">Forgot password</h1>
        <p class="page-desc mb-4">Enter your email and we&rsquo;ll send a reset link.</p>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger mb-3">
                        <i data-lucide="circle-alert" class="alert-icon"></i>
                        <div>
                            <div class="alert-title">Something went wrong</div>
                            <div asp-validation-summary="All"></div>
                        </div>
                    </div>
                }

        <form method="post">
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control" type="email" autofocus placeholder="you@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-p w-100">Send reset link</button>
        </form>
        <p class="text-center text-xs text-muted mt-3">
            <a asp-page="/Login" class="text-muted text-decoration-none">Back to login</a>
        </p>
    }
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
