@page
@model ApplicationSecurity.Pages.RegisterModel
@inject IConfiguration Configuration
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Register";
}

<div class="auth-form-box wide">
    <h1 class="page-title mb-1">Create an account</h1>
    <p class="page-desc mb-4">Join Ace Job Agency to get started.</p>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mb-3">
            <i data-lucide="circle-alert" class="alert-icon"></i>
            <div>
                <div class="alert-title">Registration failed</div>
                <div asp-validation-summary="All"></div>
            </div>
        </div>
    }

    <form method="post" enctype="multipart/form-data" id="registerForm">
        <div class="row g-2 mb-2">
            <div class="col-6">
                <label asp-for="Input.FirstName" class="form-label">First Name</label>
                <input asp-for="Input.FirstName" class="form-control" maxlength="50" placeholder="John" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="col-6">
                <label asp-for="Input.LastName" class="form-label">Last Name</label>
                <input asp-for="Input.LastName" class="form-control" maxlength="50" placeholder="Doe" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="row g-2 mb-2">
            <div class="col-6">
                <label asp-for="Input.Gender" class="form-label">Gender</label>
                <select asp-for="Input.Gender" class="form-select"><option value="">Select&hellip;</option><option value="Male">Male</option><option value="Female">Female</option></select>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>
            <div class="col-6">
                <label asp-for="Input.DateOfBirth" class="form-label">Date of Birth</label>
                <input asp-for="Input.DateOfBirth" class="form-control" type="date" />
                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-2">
            <label asp-for="Input.NRIC" class="form-label">NRIC</label>
            <input asp-for="Input.NRIC" class="form-control" placeholder="S1234567A" maxlength="9" />
            <span asp-validation-for="Input.NRIC" class="text-danger"></span>
            <div class="form-text">Letter + 7 digits + Letter</div>
        </div>
        <div class="mb-2">
            <label asp-for="Input.Email" class="form-label">Email</label>
            <input asp-for="Input.Email" class="form-control" type="email" placeholder="you@example.com" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label asp-for="Input.Password" class="form-label">Password</label>
            <input asp-for="Input.Password" class="form-control" type="password" id="password-input" autocomplete="new-password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
            <div class="pw-meter"><div id="pw-bar" class="pw-meter-bar"></div></div>
            <small id="pw-text" class="fw-medium"></small>
            <div class="pw-reqs">
                <span class="pw-req" id="req-length">12+ chars</span>
                <span class="pw-req" id="req-lower">Lowercase</span>
                <span class="pw-req" id="req-upper">Uppercase</span>
                <span class="pw-req" id="req-digit">Number</span>
                <span class="pw-req" id="req-special">Special</span>
            </div>
        </div>
        <div class="mb-2">
            <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
            <input asp-for="Input.ConfirmPassword" class="form-control" type="password" autocomplete="new-password" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label asp-for="Input.Resume" class="form-label">Resume</label>
            <input asp-for="Input.Resume" class="form-control" type="file" accept=".docx,.pdf" />
            <span asp-validation-for="Input.Resume" class="text-danger"></span>
            <div class="form-text">.docx or .pdf, max 10 MB</div>
        </div>
        <div class="mb-3">
            <label asp-for="Input.WhoAmI" class="form-label">Who Am I</label>
            <textarea asp-for="Input.WhoAmI" class="form-control" rows="2" placeholder="Tell us about yourself&hellip;"></textarea>
            <span asp-validation-for="Input.WhoAmI" class="text-danger"></span>
        </div>

        <input type="hidden" id="RecaptchaToken" name="Input.RecaptchaToken" />
        <button type="submit" class="btn btn-p w-100" data-no-spinner="true">Create account</button>
        <p class="divider">or</p>
        <p class="text-center text-xs text-muted">
            Already have an account? <a asp-page="/Login" class="link">Sign in</a>
        </p>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://www.google.com/recaptcha/api.js?render=@Configuration["GoogleReCaptcha:SiteKey"]"></script>
    <script>
        initPwStrength('password-input', 'pw-bar', 'pw-text');
        var submitting = false;
        document.getElementById('registerForm').addEventListener('submit', function (e) {
            if (submitting) return;
            e.preventDefault(); var f = this, b = f.querySelector('button[type="submit"]');
            b.disabled = true; b.textContent = 'Creating account\u2026';
            grecaptcha.ready(function () {
                grecaptcha.execute('@Configuration["GoogleReCaptcha:SiteKey"]', {action:'register'}).then(function (t) {
                    document.getElementById('RecaptchaToken').value = t; submitting = true; f.submit();
                });
            });
        });
    </script>
}
