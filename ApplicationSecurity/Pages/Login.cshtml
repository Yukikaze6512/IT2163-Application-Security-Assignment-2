@page
@model ApplicationSecurity.Pages.LoginModel
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-lg-5 col-md-7">
        <div class="text-center mb-4">
            <i class="bi bi-briefcase-fill display-4" style="color: var(--ace-primary);"></i>
            <h2 class="mt-2 fw-bold" style="color: var(--ace-primary);">Welcome back</h2>
            <p class="text-muted">Sign in to your Ace Job Agency account</p>
        </div>

        <div class="card shadow">
            <div class="card-body p-4">
                @if (!string.IsNullOrEmpty(Model.Message))
                {
                    <div class="alert alert-info d-flex align-items-center" role="alert">
                        <i class="bi bi-info-circle-fill me-2 flex-shrink-0"></i>
                        <div>@Model.Message</div>
                    </div>
                }

                <div asp-validation-summary="All" class="alert alert-danger" role="alert" style="display:none;"></div>

                <form method="post" id="loginForm">
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">
                            <i class="bi bi-envelope me-1 text-muted"></i>Email Address
                        </label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-at"></i></span>
                            <input asp-for="Input.Email" class="form-control" type="email" autofocus
                                   placeholder="you@example.com" />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <label asp-for="Input.Password" class="form-label">
                                <i class="bi bi-lock me-1 text-muted"></i>Password
                            </label>
                            <a asp-page="/ForgotPassword" class="small text-decoration-none">Forgot password?</a>
                        </div>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-key"></i></span>
                            <input asp-for="Input.Password" class="form-control" type="password" />
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <input type="hidden" id="RecaptchaToken" name="Input.RecaptchaToken" />

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-ace btn-lg" data-no-spinner="true">
                            <i class="bi bi-box-arrow-in-right me-1"></i>Sign In
                        </button>
                    </div>

                    <p class="divider-text my-4">or</p>

                    <div class="text-center">
                        New here?
                        <a asp-page="/Register" class="fw-semibold text-decoration-none">Create an account</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://www.google.com/recaptcha/api.js?render=@Configuration["GoogleReCaptcha:SiteKey"]"></script>
    <script>
        var vs = document.querySelector('[data-valmsg-summary]');
        if (vs) {
            var observer = new MutationObserver(function () {
                vs.style.display = vs.querySelector('li') ? 'block' : 'none';
            });
            observer.observe(vs, { childList: true, subtree: true });
        }

        var isSubmitting = false;
        document.getElementById('loginForm').addEventListener('submit', function (e) {
            if (isSubmitting) return true;
            e.preventDefault();
            var form = this;
            var btn = form.querySelector('button[type="submit"]');
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Signing in\u2026';

            grecaptcha.ready(function () {
                grecaptcha.execute('@Configuration["GoogleReCaptcha:SiteKey"]', { action: 'login' }).then(function (token) {
                    document.getElementById('RecaptchaToken').value = token;
                    isSubmitting = true;
                    form.submit();
                });
            });
        });
    </script>
}
