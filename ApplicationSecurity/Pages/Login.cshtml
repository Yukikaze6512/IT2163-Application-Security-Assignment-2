@page
@model ApplicationSecurity.Pages.LoginModel
@inject IConfiguration Configuration
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
}

<div class="auth-form-box">
    <h1 class="page-title mb-1">Sign in</h1>
    <p class="page-desc mb-4">Enter your credentials to continue.</p>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-info mb-3">
            <i data-lucide="info" class="alert-icon"></i>
            <div>
                <div class="alert-title">Notice</div>
                <div class="alert-desc">@Model.Message</div>
            </div>
        </div>
    }
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mb-3">
            <i data-lucide="circle-alert" class="alert-icon"></i>
            <div>
                <div class="alert-title">Authentication failed</div>
                <div asp-validation-summary="All"></div>
            </div>
        </div>
    }

    <form method="post" id="loginForm">
        <div class="mb-3">
            <label asp-for="Input.Email" class="form-label" for="login-email">Email</label>
            <input asp-for="Input.Email" class="form-control" type="email" autofocus placeholder="you@example.com" id="login-email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <div class="d-flex justify-content-between align-items-baseline">
                <label asp-for="Input.Password" class="form-label" for="login-password">Password</label>
                <a asp-page="/ForgotPassword" class="text-xs text-muted text-decoration-none">Forgot password?</a>
            </div>
            <input asp-for="Input.Password" class="form-control" type="password" id="login-password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <input type="hidden" id="RecaptchaToken" name="Input.RecaptchaToken" />
        <button type="submit" class="btn btn-p w-100 mt-1" data-no-spinner="true">Sign in</button>
        <p class="divider">or</p>
        <p class="text-center text-xs text-muted">
            Don&rsquo;t have an account? <a asp-page="/Register" class="link">Register</a>
        </p>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://www.google.com/recaptcha/api.js?render=@Configuration["GoogleReCaptcha:SiteKey"]"></script>
    <script>
        var submitting = false;
        document.getElementById('loginForm').addEventListener('submit', function (e) {
            if (submitting) return;
            e.preventDefault(); var f = this, b = f.querySelector('button[type="submit"]');
            b.disabled = true; b.textContent = 'Signing in\u2026';
            grecaptcha.ready(function () {
                grecaptcha.execute('@Configuration["GoogleReCaptcha:SiteKey"]', {action:'login'}).then(function (t) {
                    document.getElementById('RecaptchaToken').value = t; submitting = true; f.submit();
                });
            });
        });
    </script>
}