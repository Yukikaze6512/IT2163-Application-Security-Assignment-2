@page
@model ApplicationSecurity.Pages.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    ViewData["Breadcrumb"] = "Change Password";
}

<div class="max-w-sm">
    <div class="mb-4">
        <h1 class="page-title">Change password</h1>
        <p class="page-desc">Update your password to keep your account secure.</p>
    </div>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-warning mb-3">
            <i data-lucide="triangle-alert" class="alert-icon"></i>
            <div>
                <div class="alert-title">Action required</div>
                <div class="alert-desc">@Model.Message</div>
            </div>
        </div>
    }
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mb-3">
            <i data-lucide="circle-alert" class="alert-icon"></i>
            <div>
                <div class="alert-title">Could not update password</div>
                <div asp-validation-summary="All"></div>
            </div>
        </div>
    }

    <form method="post">
        <div class="mb-3">
            <label asp-for="Input.CurrentPassword" class="form-label" for="current-password">Current Password</label>
            <input asp-for="Input.CurrentPassword" class="form-control" type="password" id="current-password" />
            <span asp-validation-for="Input.CurrentPassword" class="text-danger"></span>
        </div>
        <hr class="my-3" />
        <div class="mb-2">
            <label asp-for="Input.NewPassword" class="form-label" for="password-input">New Password</label>
            <input asp-for="Input.NewPassword" class="form-control" type="password" id="password-input" autocomplete="new-password" />
            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            <div class="pw-meter"><div id="pw-bar" class="pw-meter-bar"></div></div>
            <small id="pw-text" class="fw-medium"></small>
            <div class="pw-reqs">
                <span class="pw-req" id="req-length">12+ chars</span>
                <span class="pw-req" id="req-lower">Lowercase</span>
                <span class="pw-req" id="req-upper">Uppercase</span>
                <span class="pw-req" id="req-digit">Number</span>
                <span class="pw-req" id="req-special">Special</span>
            </div>
        </div>
        <div class="mb-4">
            <label asp-for="Input.ConfirmNewPassword" class="form-label" for="confirm-password">Confirm New Password</label>
            <input asp-for="Input.ConfirmNewPassword" class="form-control" type="password" autocomplete="new-password" id="confirm-password" />
            <span asp-validation-for="Input.ConfirmNewPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-p w-100">Update password</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>initPwStrength('password-input', 'pw-bar', 'pw-text');</script>
}