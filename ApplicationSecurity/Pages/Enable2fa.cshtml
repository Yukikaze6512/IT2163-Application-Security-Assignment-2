@page
@model ApplicationSecurity.Pages.Enable2faModel
@{
    ViewData["Title"] = "Two-Factor Authentication";
    ViewData["Breadcrumb"] = "Two-Factor Authentication";
}

<div class="max-w-md">
    <div class="mb-4">
        <h1 class="page-title">Two-factor authentication</h1>
        <p class="page-desc">Add an extra layer of security to your account.</p>
    </div>

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-success mb-3">
            <i data-lucide="circle-check" class="alert-icon"></i>
            <div>
                <div class="alert-title">Success</div>
                <div class="alert-desc">@Model.StatusMessage</div>
            </div>
        </div>
    }

    @if (Model.Is2faEnabled)
    {
        <div class="data-card">
            <div class="card-inner text-center py-4">
                <span class="badge bg-success rounded-pill px-3 py-2 mb-2 text-xs">Enabled</span>
                <p class="text-muted text-sm mb-3">Your account is protected with two-factor authentication.</p>
                <form method="post" asp-page-handler="Disable">
                    <button type="submit" class="btn btn-o btn-sm"
                            onclick="return confirm('Disable two-factor authentication?');">Disable 2FA</button>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="data-card mb-3">
            <div class="card-head">Step 1 &mdash; Scan QR code</div>
            <div class="card-inner">
                <p class="text-sm text-muted mb-3">Use Google Authenticator, Microsoft Authenticator, or a similar app.</p>
                @if (Model.QrCodeImage != null)
                {
                    <div class="text-center mb-3">
                        <div class="d-inline-block p-2 border rounded bg-white">
                            <img src="data:image/png;base64,@Convert.ToBase64String(Model.QrCodeImage)" alt="QR Code" style="max-width:170px;" />
                        </div>
                    </div>
                }
                <div class="bg-light border rounded p-2 text-center text-sm">
                    <span class="text-muted">Manual key:</span>
                    <code class="user-select-all ms-1">@Model.SharedKey</code>
                </div>
            </div>
        </div>

        <div class="data-card">
            <div class="card-head">Step 2 &mdash; Verify code</div>
            <div class="card-inner">
                <p class="text-sm text-muted mb-3">Enter the 6-digit code from your app.</p>
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger mb-3">
                        <i data-lucide="circle-alert" class="alert-icon"></i>
                        <div>
                            <div class="alert-title">Verification failed</div>
                            <div asp-validation-summary="All"></div>
                        </div>
                    </div>
                }
                <form method="post" asp-page-handler="Enable" id="enable2faForm">
                    <input type="hidden" name="Input.Code" id="enableOtpHidden" />
                    <div class="mb-3">
                        <div class="form-otp" id="enableOtp" role="group" aria-label="Verification code">
                            <input class="otp-c" type="text">
                            <input class="otp-c" type="text">
                            <input class="otp-c" type="text">
                            <span class="otp-sep">&ndash;</span>
                            <input class="otp-c" type="text">
                            <input class="otp-c" type="text">
                            <input class="otp-c" type="text">
                        </div>
                        <span asp-validation-for="Input.Code" class="text-danger d-block text-center mt-1"></span>
                    </div>
                    <button type="submit" class="btn btn-p w-100" id="enableBtn">Enable 2FA</button>
                </form>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        if (document.getElementById('enableOtp')) {
            initOtp('#enableOtp', 'Input.Code', { type:'number', placeholder:'0' });
            document.getElementById('enable2faForm').addEventListener('submit', function () {
                var b = document.getElementById('enableBtn'); b.disabled = true; b.textContent = 'Verifying\u2026';
            });
        }
    </script>
}
