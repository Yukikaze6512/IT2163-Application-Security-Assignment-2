@page
@model ApplicationSecurity.Pages.ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="max-w-sm text-center py-5">
    <div class="err-code mb-1">500</div>
    <h2 class="page-title mb-1">Something went wrong</h2>
    <p class="page-desc mb-4">An unexpected error occurred. Please try again.</p>
    @if (Model.ShowRequestId)
    {
        <p class="text-xs text-muted mb-3">Request ID: <code>@Model.RequestId</code></p>
    }
    <div class="d-flex justify-content-center gap-2">
        <a href="/" class="btn btn-p btn-sm">Home</a>
        <a asp-page="/Login" class="btn btn-o btn-sm">Login</a>
    </div>
</div>
