@page
@model ApplicationSecurity.Pages.ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="text-center py-5">
    <div class="error-illustration mb-3">
        <i class="bi bi-exclamation-triangle"></i>
    </div>
    <h2 class="fw-bold mb-2" style="color:var(--ace-primary);">Something went wrong</h2>
    <p class="text-muted lead mb-4" style="max-width:420px; margin:auto;">
        An unexpected error occurred while processing your request. Please try again.
    </p>

    @if (Model.ShowRequestId)
    {
        <p class="text-muted small mb-4">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <div class="d-flex justify-content-center gap-3">
        <a href="/" class="btn btn-ace px-4">
            <i class="bi bi-house-door me-1"></i>Go Home
        </a>
        <a asp-page="/Login" class="btn btn-ace-outline px-4">
            <i class="bi bi-box-arrow-in-right me-1"></i>Login
        </a>
    </div>
</div>
