@page "/StatusCode/{code:int}"
@model ApplicationSecurity.Pages.StatusCodeModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="max-w-sm text-center py-5">
    <div class="err-code mb-1">@Model.Code</div>
    <h2 class="page-title mb-1">@Model.Title</h2>
    <p class="page-desc mb-4">@Model.Description</p>
    <div class="d-flex justify-content-center gap-2">
        <a href="/" class="btn btn-p btn-sm">Home</a>
        <a asp-page="/Login" class="btn btn-o btn-sm">Login</a>
    </div>
</div>
