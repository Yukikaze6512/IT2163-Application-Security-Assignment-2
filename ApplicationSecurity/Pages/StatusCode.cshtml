@page "/StatusCode/{code:int}"
@model ApplicationSecurity.Pages.StatusCodeModel
@{
    ViewData["Title"] = Model.Title;

    var iconClass = Model.Code switch
    {
        403 => "bi-shield-x",
        404 => "bi-search",
        500 => "bi-exclamation-triangle",
        _ => "bi-exclamation-circle"
    };
}

<div class="text-center py-5">
    <div class="error-illustration mb-3">
        <i class="bi @iconClass"></i>
    </div>
    <h1 class="display-3 fw-bold" style="color:var(--ace-primary);">@Model.Code</h1>
    <h3 class="mb-2">@Model.Title</h3>
    <p class="text-muted lead mb-4" style="max-width:420px; margin:auto;">@Model.Description</p>
    <div class="d-flex justify-content-center gap-3">
        <a href="/" class="btn btn-ace px-4">
            <i class="bi bi-house-door me-1"></i>Go Home
        </a>
        <a asp-page="/Login" class="btn btn-ace-outline px-4">
            <i class="bi bi-box-arrow-in-right me-1"></i>Login
        </a>
    </div>
</div>
