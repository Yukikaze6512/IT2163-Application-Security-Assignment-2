<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ace Job Agency</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm" style="background: linear-gradient(135deg, #1e3a5f 0%, #2d5986 100%);">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-page="/Index">
                    <i class="bi bi-briefcase-fill fs-4"></i>
                    <span class="fw-bold">Ace Job Agency</span>
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse"
                        data-bs-target="#mainNav" aria-controls="mainNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Index">
                                    <i class="bi bi-house-door me-1"></i>Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/ChangePassword">
                                    <i class="bi bi-key me-1"></i>Change Password
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Enable2fa">
                                    <i class="bi bi-shield-lock me-1"></i>2FA
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-lg-center">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item me-2">
                                <span class="nav-link">
                                    <i class="bi bi-person-circle me-1"></i>@User.Identity.Name
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-page="/Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-light btn-sm rounded-pill px-3">
                                        <i class="bi bi-box-arrow-right me-1"></i>Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-2">
                                <a class="btn btn-outline-light btn-sm rounded-pill px-3" asp-page="/Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-light btn-sm rounded-pill px-3 text-primary fw-semibold" asp-page="/Register">
                                    <i class="bi bi-person-plus me-1"></i>Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1 py-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="mt-auto py-3 bg-dark text-light">
        <div class="container">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
                <span class="text-muted small">&copy; 2026 Ace Job Agency. All rights reserved.</span>
                <div class="d-flex gap-3 mt-2 mt-md-0">
                    <a asp-page="/Privacy" class="text-muted small text-decoration-none">
                        <i class="bi bi-shield-check me-1"></i>Privacy Policy
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
