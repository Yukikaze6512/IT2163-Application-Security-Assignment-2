<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ace Job Agency</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="app-nav navbar navbar-expand-lg sticky-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <span class="brand-icon me-2"><i data-lucide="briefcase" style="width:14px;height:14px;"></i></span>
                Ace Job Agency
            </a>
            <button class="navbar-toggler border-0" type="button"
                    data-bs-toggle="collapse" data-bs-target="#appNav">
                <i data-lucide="menu" style="width:18px;height:18px;"></i>
            </button>
            <div class="collapse navbar-collapse" id="appNav">
                <ul class="navbar-nav me-auto">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item"><a class="nav-link" asp-page="/Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/ChangePassword">Password</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Enable2fa">2FA</a></li>
                    }
                </ul>
                <div class="d-flex align-items-center gap-2">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <span class="user-label d-none d-lg-inline">@User.Identity.Name</span>
                        <form asp-page="/Logout" method="post">
                            <button type="submit" class="btn btn-ghost btn-sm">Log out</button>
                        </form>
                    }
                    else
                    {
                        <a class="btn btn-ghost btn-sm" asp-page="/Login">Login</a>
                        <a class="btn btn-p btn-sm" asp-page="/Register">Register</a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <div class="container flex-grow-1 py-4">
        @if (ViewData["Breadcrumb"] != null)
        {
            <nav class="bc mb-3">
                <a href="/">Home</a>
                <span class="sep">/</span>
                <span>@ViewData["Breadcrumb"]</span>
            </nav>
        }
        <main>@RenderBody()</main>
    </div>

    <footer class="app-footer mt-auto py-3">
        <div class="container d-flex justify-content-between">
            <span>&copy; 2026 Ace Job Agency</span>
            <a asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/lucide@0.460.0/dist/umd/lucide.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
